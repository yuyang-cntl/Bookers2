<div class="d-flex flex-column mt-1 mx-3">
 <div class="container-fluid">
  <div class="row ml-3">
   <div class="text-start">
    <h2>User info</h2>
    <div class="border-bottom mb-2">
     <%= image_tag user.get_profile_image(100,100) %>
    </div>
    <div class="d-flex border-bottom mb-2 pb-2">
     <div class="col-7"><strong>name</strong></div>
     <div class="col-5"><strong><%= user.name %></strong></div>
    </div>
    <div class="d-flex mb-5">
     <div class="col-7 text-start"><strong>introduction</strong></div>
     <div class="col-5 text-start"><strong><%= user.introduction %></strong></div>
    </div>
  
    <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-white-hover", style:"width:300px;" do %>
     <i class="fa-solid fa-user-gear icon-hover-white text-secondary"></i>
    <% end %>

   <h2 class="mt-3 pb-2">New book</h2>
   <% if @book.errors.any? %>
   <%= @book.errors.count %>件のエラーが発生しました
    <ul>
    <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
    <% end %>
    </ul>
   <% end %>
 
   <%= form_with model: book do |f| %>
    <div style="width: 280px;">
     <p>Title</p>
     <%= f.text_field :title, class:"form-control w-100" %>
     <p class="mt-4">Opinion</p>
     <%= f.text_area :body, class:"form-control w-100",rows: 2 %>
     <%= f.submit 'Create Book', class: "btn btn-success mt-3" %>
    </div>
   <% end %>
   </div>
  </div>
 </div>
</div>