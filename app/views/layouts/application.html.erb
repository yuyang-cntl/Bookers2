<!DOCTYPE html>
<html>
  <head>
   <title>Bookers2</title>
   <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
   <%= csrf_meta_tags %>
   <%= csp_meta_tag %>
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
   <script src="https://kit.fontawesome.com/gongyoumi@gmail.com.js" crossorigin="anonymous"></script>
   <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
   <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
  <header>
  <nav class="navbar navbar-dark bg-dark">
   <div class="container d-flex justify-content-between align-items-center">
    <%= link_to "Bookers", root_path, class: "navbar-brand text-white" %>
   <ul class="navbar-nav flex-row">
    <% if user_signed_in? %>
     <li class="nav-item mx-2 d-flex align-items-center">
      <i class="fa-solid fa-house text-white" style="margin-right: 0.3rem;"></i>
      <%= link_to "Home", user_path(current_user), class: "nav-link text-white p-0" %>
     </li>
     <li class="nav-item mx-2 d-flex align-items-center">
     <i class="fa-solid fa-users text-white" style="margin-right: 0.3rem;"></i>
      <%= link_to "Users", users_path, class: "nav-link text-white p-0" %>
     </li>
     <li class="nav-item mx-2 d-flex align-items-center">
     <i class="fa-solid fa-book-open text-white" style="margin-right: 0.3rem;"></i>
      <%= link_to "Books", books_path, class: "nav-link text-white p-0" %>
     </li>
     <li class="nav-item mx-2 d-flex align-items-center">
     <i class="fa-solid fa-right-from-bracket text-white" style="margin-right: 0.3rem;"></i>
      <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link text-white" %>
     </li>
    <% else %>
     <li class="nav-item mx-2 d-flex align-items-center">
     <i class="fa-solid fa-house text-white" style="margin-right: 0.3rem;"></i>
      <%= link_to "Home", root_path, class: "nav-link text-white p-0" %>
     </li>
     <li class="nav-item mx-2 d-flex align-items-center">
     <i class="fa-solid fa-link text-white" style="margin-right: 0.3rem;"></i>
      <%= link_to "About", about_path, class: "nav-link text-white p-0" %>
     </li>
     <li class="nav-item mx-2 d-flex align-items-center">
     <i class="fa-solid fa-user-plus text-white" style="margin-right: 0.3rem;"></i>
      <%= link_to "Sign up", new_user_registration_path, class: "nav-link text-white p-0" %>
     </li>
     <li class="nav-item mx-2 d-flex align-items-center">
     <i class="fa-solid fa-right-to-bracket text-white" style="margin-right: 0.3rem;"></i>
      <%= link_to "Log in", new_user_session_path, class: "nav-link text-white p-0" %>
     </li>
    <% end %>
   </ul>
   </div>
   </nav>
  </header>
    <%= yield %>
    <footer>
    <%= 'CopyRight Infratop.inc' %>
    </footer>
  </body>
</html>
