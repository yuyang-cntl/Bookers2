<% if @book.errors.any? %>
  <div class="alert alert-danger">
  <h4>error</h4>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container text-start py-3">
 <div class="row">
  <div class="col-md-5 mx-auto">
   <h1>Editing Book</h1>
   <%= form_with model: @book, class:"d-flex flex-column" do |f| %>
    <label for="title">Title</label>
    <%= f.text_field :title, autofocus: true, id: "title",class:"form-control w-100" %>
   <label for="Opinion">Opinion</label>
    <%= f.text_area :body,autofocus: true, id: "body", class:"form-control w-100",rows: 2 %>
   <%= f.submit "Update Book",class:"btn btn-success mt-3 mb-3", style:"width:120px;" %>
   <% end %>
   <div class="d-flex">
   <%= link_to book_path(@book) do %>
    <p class="mr-1"><%= 'Show' %></p>
   <% end %>
    <%= '|' %>
   <%= link_to books_path do %>
    <p class="ml-1"><%= 'Back' %></p>
   <% end %>
   </div>
  </div>
 </div>
</div>