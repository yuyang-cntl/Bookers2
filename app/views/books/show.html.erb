<div class="container-fluid">
 <div class="row">
  <div class="col-md-3 mt-1">
   <%= render 'list', book: @book, user: @user %>
  </div>

  <div class="offset-md-1 col-md-8">
   <h2 class="pt-2 pb-2 custom-heading">Books detail</h2>
   <div class="d-flex text-align-start pb-1">
  </div>

  <div class="d-flex custom-heading">
   <div class="flex-colmun col-md-2 py-3">
   <%= link_to user_path(@user.id) do %>
    <%= image_tag @user.get_profile_image(100,100) %>
    <%= @user.name %>
   <% end %>
   </div>
   <div class="justify-content-between align-items-center col-md-3 py-3">
   <%= link_to book_path(@book) do %>
    <p><%= @books.name %></p>
   <% end %>
   </div>
   <div class="justify-content-between col-md-4 py-3">
    <p><%= @book.body %></p>
   </div>
    <div class="d-flex justify-content-between col-md-3 py-3">
     <%= button_to "Edit", edit_book_path(@book), method: :get, class: "btn btn-success" %>
     <%= button_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
    </div>
   </div>
  </div>
 </div>
</div>
